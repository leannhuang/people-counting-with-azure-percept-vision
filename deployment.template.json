{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "361d": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_LOGINSERVER"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.1",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.1",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "avaedge": {
            "version": "1.1",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/media/video-analyzer:1",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "",
                    "Config": {
                      "max-size": "10m",
                      "max-file": "10"
                    }
                  },
                  "Binds": [
                    "$VIDEO_OUTPUT_FOLDER_ON_DEVICE:/var/media/",
                    "$APPDATA_FOLDER_ON_DEVICE:/var/lib/videoanalyzer"
                  ],
                  "IpcMode": "host",
                  "ShmSize": 1536870912
                }
              }
            }
          },
          "CountModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CountModule}",
              "createOptions": {}
            }
          },
          "azureeyemodule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureedgedevices/azureeyemodule:2108-1",
              "createOptions": {
                "ExposedPorts": {
                  "8554/tcp": {}
                },
                "HostConfig": {
                  "Binds": [
                    "/dev/bus/usb:/dev/bus/usb"
                  ],
                  "Privileged": true,
                  "DeviceCgroupRules": [
                    "c 189:* rmw"
                  ],
                  "PortBindings": {
                    "8554/tcp": [{"HostPort": "8554"}]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "AzureEyeToCountModule": "FROM /messages/modules/azureeyemodule/outputs/* INTO BrokeredEndpoint(\"/modules/CountModule/inputs/CountInput\")",
          "CountModuleToHub": "FROM /messages/modules/CountModule/outputs/* INTO $upstream",
          "AVAToHub": "FROM /messages/modules/avaedge/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "avaedge": {
      "properties.desired": {
        "applicationDataDirectory": "/var/lib/videoanalyzer",
        "ProvisioningToken": "$AVA_PROVISIONING_TOKEN",
        "diagnosticsEventsOutputName": "diagnostics",
        "operationalEventsOutputName": "operational",
        "logLevel": "Verbose",
        "logCategories": "application, events",
        "debugLogsDirectory": "/tmp",
        "allowUnsecuredEndpoints": true,
        "telemetryOptOut": false
      }
    },
    "azureeyemodule": {
      "properties.desired": {
        "Logging": true,
        "ModelZipUrl": "https://aedsamples.blob.core.windows.net/vision/aeddevkitnew/person-detection-retail-0013.zip",
        "RawStream": true,
        "ResultStream": true,
        "Running": true,
        "TelemetryInterval": 10
      }
    }
  }
}